


<%= form_for :post, url:'/posts/create' do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title , class: 'form-control'%>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content , class: 'ckeditor' %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <script type="text/javascript" src="js/config_ckeditor.js"></script>
<% end %>